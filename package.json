{
  "name": "sigil",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:safe": "node scripts/db-migrate-safe.mjs",
    "register-schema": "bun run src/scripts/register-schema.ts",
    "test": "bun test",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "typecheck": "tsc --noEmit",
    "typecheck:packages": "npm run --workspaces --if-present typecheck",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "build:packages": "npm run --workspaces --if-present build",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@ethereum-attestation-service/eas-sdk": "^2.7.0",
    "@hono/node-server": "^1.13.0",
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "0.19.10",
    "@privy-io/server-auth": "^1.32.5",
    "@reclaimprotocol/js-sdk": "^4.12.0",
    "cheerio": "^1.0.0",
    "drizzle-orm": "^0.45.1",
    "ethers": "^6.13.0",
    "hono": "^4.6.0",
    "jose": "^5.9.0",
    "octokit": "^4.0.0",
    "pino": "^9.5.0",
    "postgres": "^3.4.0",
    "zod": "^3.23.0"
  },
  "optionalDependencies": {
    "ioredis": "^5.4.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.18.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
